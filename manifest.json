{
  "manifest_version": 2,
  "name": "Web Font Switcher",
  "version": "0.1",

  "permissions" : [ "tabs" ],

  "description": "This is my first chrome extension.",

  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_title": "Web Font Switcher",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": [ "http://*/*", "https://*/*" ],
      "js": [ "js/lib/webfont.js", "js/content_scripts.js" ]
    }
  ]
}
